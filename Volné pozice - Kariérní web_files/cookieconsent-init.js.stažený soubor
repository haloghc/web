function removePreferenceCookies() {
    // TODO not working
    cc.eraseCookies(['_ga', '_gid', 'GUEST_LANGUAGE_ID']);
}

function removeAnalyticalCookies() {
    cc.eraseCookies(['_ga'], "/", ['rsd.cz']);
    cc.eraseCookies(['_gid'], "/", ['rsd.cz']);
    cc.eraseCookies(['_gat'], "/", ['rsd.cz']);
}
